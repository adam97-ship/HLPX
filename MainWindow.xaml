<Window x:Class="ChaosLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="CHAOS LAUNCHER - Gaming Optimizer" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0B061A"
        Foreground="#E6E0FF"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Assets/icon.ico"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryColor">#7A4DFF</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColor">#9D7CFF</SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundColor">#0B061A</SolidColorBrush>
        <SolidColorBrush x:Key="CardColor">#140C2E</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#E6E0FF</SolidColorBrush>
        <SolidColorBrush x:Key="MutedColor">#9D7CFF</SolidColorBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9D7CFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6B3FD9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="#2A1F47"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <StackPanel VerticalAlignment="Top" Height="80" Background="#0B061A" Margin="0,0,0,0">
            <Border BorderBrush="#2A1F47" BorderThickness="0,0,0,1" Padding="20,15">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="âš¡ CHAOS" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,10,0"/>
                    <TextBlock Text="Gaming Optimizer" FontSize="14" Foreground="{StaticResource MutedColor}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Main Content -->
        <Grid Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - System Stats -->
            <StackPanel Grid.Column="0" Margin="20,20,10,20" VerticalAlignment="Top">
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="SYSTEM STATS" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,15"/>
                        
                        <!-- CPU -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="CPU" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="CpuText" Text="0%" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <ProgressBar x:Name="CpuBar" Height="6" Background="#2A1F47" Foreground="{StaticResource PrimaryColor}" Value="0" Maximum="100" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- RAM -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="RAM" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="RamText" Text="0 / 0 GB" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <ProgressBar x:Name="RamBar" Height="6" Background="#2A1F47" Foreground="{StaticResource SecondaryColor}" Value="0" Maximum="100" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- GPU -->
                        <StackPanel>
                            <TextBlock Text="GPU" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GpuText" Text="0%" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <ProgressBar x:Name="GpuBar" Height="6" Background="#2A1F47" Foreground="#FF6B9D" Value="0" Maximum="100" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="STATUS" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,15"/>
                        <TextBlock Text="Power Plan:" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="PowerPlanText" Text="Balanced" FontSize="12" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>
                        <TextBlock Text="Boost:" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BoostStatusText" Text="OFF" FontSize="12" FontWeight="Bold" Foreground="{StaticResource MutedColor}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Center Panel - Controls -->
            <StackPanel Grid.Column="1" Margin="10,20,10,20" VerticalAlignment="Top">
                <!-- Main Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Height="100">
                    <Button x:Name="BoostButton" Content="âš¡ BOOST" Style="{StaticResource PrimaryButtonStyle}" Width="200" Height="100" FontSize="18" Margin="0,0,15,0" Click="BoostButton_Click"/>
                    <Button x:Name="RestoreButton" Content="ðŸ”„ RESTORE" Style="{StaticResource PrimaryButtonStyle}" Width="200" Height="100" FontSize="18" Background="#1F1538" Click="RestoreButton_Click"/>
                </StackPanel>

                <!-- Optimization Modes -->
                <TextBlock Text="OPTIMIZATION MODES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,15"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Competitive -->
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Competitive" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Max FPS" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}" Click="CompetitiveMode_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Graphics -->
                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,10,10">
                        <StackPanel>
                            <TextBlock Text="Ultra Graphics" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Balanced" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}" Click="GraphicsMode_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Network -->
                    <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Network Boost" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Low Ping" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}" Click="NetworkMode_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Balanced -->
                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Balanced" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Safe" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}" Click="BalancedMode_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Color Boost -->
                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Color Boost" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Vibrance" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}" Click="ColorMode_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Clean -->
                    <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Clean System" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="Temp Files" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,0,0,10"/>
                            <Button Content="Clean" Style="{StaticResource PrimaryButtonStyle}" Click="CleanButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Status Log -->
                <TextBlock Text="STATUS LOG" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,10"/>
                <Border Style="{StaticResource CardStyle}" Height="150">
                    <TextBlock x:Name="StatusLog" Text="Ready..." Foreground="{StaticResource TextColor}" TextWrapping="Wrap" VerticalAlignment="Top"/>
                </Border>
            </StackPanel>

            <!-- Right Panel - Games -->
            <StackPanel Grid.Column="2" Margin="10,20,20,20" VerticalAlignment="Top">
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="GAMES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,15"/>
                        <ListBox x:Name="GamesList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextColor}">
                            <ListBoxItem>
                                <StackPanel>
                                    <TextBlock Text="Counter-Strike 2" FontWeight="Bold"/>
                                    <Button Content="Launch" Style="{StaticResource PrimaryButtonStyle}" Width="100" Height="30" Margin="0,5,0,0" Click="LaunchGame_Click" Tag="csgo.exe"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel>
                                    <TextBlock Text="Valorant" FontWeight="Bold"/>
                                    <Button Content="Launch" Style="{StaticResource PrimaryButtonStyle}" Width="100" Height="30" Margin="0,5,0,0" Click="LaunchGame_Click" Tag="valorant.exe"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel>
                                    <TextBlock Text="Fortnite" FontWeight="Bold"/>
                                    <Button Content="Launch" Style="{StaticResource PrimaryButtonStyle}" Width="100" Height="30" Margin="0,5,0,0" Click="LaunchGame_Click" Tag="FortniteClient-Win64-Shipping.exe"/>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Info -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel TextAlignment="Center">
                        <TextBlock Text="CHAOS LAUNCHER" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="v1.0.0" FontSize="11" Foreground="{StaticResource MutedColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="Gaming Optimizer" FontSize="10" Foreground="{StaticResource MutedColor}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
